{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}
		</div>
	{% endfor %}
	<div class="container">
		<div class="row">
			<div class="col-12 text-center">
				<h1>S'inscrire
					<i class=" fa fa-user-plus"></i>
				</h1>
			</div>
		
		
		<div class="row justify-content-center">
			<div class="col-lg-8 bg-light justify-content-lg-center">
				<div class="input-field pl-5" id="register">

				{{ form_start (registrationForm) }}
				{{ form_row (registrationForm.username, {label: 'Login'}) }}
				{{ form_row (registrationForm.plainPassword, {label: 'Mot de passe'}) }}
				{{ form_row (registrationForm.passwordConfirm, {label: 'Mot de passe Ã  confirmer'}) }}
				{{ form_row (registrationForm.email, {label: 'Email'}) }}
				{{ form_row (registrationForm.agreeTerms, {label: 'Valider infos'}) }}
				</div>
			</div>
			
			<div class="col-lg-8 justify-content-lg-center" id="register-buttom">
				<button type="submit" class="btn btn-secondary">M'enregistrer</button>
			</div>
				
			{{ form_end (registrationForm) }}
				
		</div>
		</div>
	</div>

{% endblock %}
