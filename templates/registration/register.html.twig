{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
<div class="container">
	<div class="text-center " style="padding-bottom:100px">
		<h1>S'inscrire</h1>
	</div>
	<div class="col-md-6 bg-light p-3 m-t-5">
		<div class="input-field" id="register">
		
			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.username, {label: 'Login'}) }}
			{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
			{{ form_row(registrationForm.email, {label: 'Email'}) }}
			{{ form_row(registrationForm.email_confirm, {label: 'Confirmation Email'}) }}
			{{ form_row(registrationForm.agreeTerms, {label: 'Valider infos'}) }}
		</div>	
		<div class="input-field" id="register-buttom">
			<button type="submit" class="btn btn-secondary">M'enregistrer</button>
		</div>
			{{ form_end(registrationForm) }}
		</div>
	
</div>

{% endblock %}
