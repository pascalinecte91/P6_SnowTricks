{% extends 'base.html.twig' %}

{% block title %}
Réinitialisez votre mot de passe
{% endblock %}

{% block body %}

	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

<div class="container ">
	<h2>Réinitialisez votre mot de passe</h2>
		<div class="row mt-5">
			<div class="col-md-6">
				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}
			</div>
		</div><br>
		<small>
			Merci de rentrer votre email, nous allons vous envoyer un lien de réinitialisation.
		</small>
    
	<div class="my-3">
		<button class="btn btn-primary">Réinitialisation mot de passe</button>
	</div>
		    {{ form_end(requestForm) }}
		<div class="reinitializ">
    <small> si vous n'avez pas demandé de modifier votre mot de passe ! Ne tenez pas compte de ce message! </small>
	</div>
</div>
{% endblock %}
